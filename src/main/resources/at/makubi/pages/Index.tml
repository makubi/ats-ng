<html t:type="layout" title="ats Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

    <p>${message:greeting}</p>

    <!--<p>The current time is: <strong>${currentTime}</strong></p>-->


    <t:zone t:id="zone">
    <p>
        <ul>
            <t:loop source="entryService.allEntries" value="currentEntry">
                <t:loop source="currentEntry.texts" value="currentText">
                    <li>${currentEntry.identifier.number}.${currentEntry.identifier.subNumber}: ${currentText.text}</li>
                </t:loop>
            </t:loop>

        </ul>
    </p>
        </t:zone>



        <p>
            <form t:type="form" t:id="entryForm" t:zone="zone">

                <t:errors/>

                <t:label for="number" />
                <t:label for="subNumber" />
                <br />
                <input t:type="TextField" t:id="number" t:validate="required" size="10" />
                <input t:type="TextField" t:id="subNumber" size="5" />
                <br />
                <br />

                <t:label for="language" />
                <br />
                <input t:type="TextField" t:id="language" t:validate="required" size="2" />
                <br />
                <br />

                <t:label for="text" />
                <br />
                <input t:type="TextArea" t:id="text" t:validate="required" size="20" />
                <br />
                <br />

                <t:label for="maxLength" />
                <br />
                <input t:type="TextField" t:id="maxLength" t:validate="required" size="5" />
                <br />
                <br />

                <t:label for="metaInfo" />
                <br />
                <input t:type="TextField" t:id="metaInfo" size="20" />
                <br />
                <br />
                <input type="submit" value="addEntry" /><br />
                <input type="reset" value="Reset" />
            </form>
        </p>

            <p>
                <t:actionlink t:id="addRandomEntry" zone="zone">addRandomEntry</t:actionlink>
            </p>


