<html t:type="layout" title="ats Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

    <p>${message:greeting}</p>

    <!--<p>The current time is: <strong>${currentTime}</strong></p>-->


    <p>
        <form t:type="form" t:id="searchForm" t:zone="zone">

            <t:errors/>

            <t:label for="searchBox" />
            <br />
            <input t:type="TextField" t:id="searchBox" t:validate="required" size="10" />
            <br />
            <br />
            <input type="submit" value="search" /><br />
            <input type="reset" value="Reset" />
        </form>
    </p>

    <t:zone t:id="zone">
    <p>
        <ul>
            <t:loop source="foundEntries" value="currentEntry">
                <t:loop source="currentEntry.texts" value="currentText">
                    <li>${currentEntry.identifier.number}.${currentEntry.identifier.subNumber}: ${currentText.text}</li>
                </t:loop>
            </t:loop>

        </ul>
    </p>
        </t:zone>

